<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.GenerateReportViewController"
            prefHeight="400" prefWidth="600"
            style="-fx-background-color: #ecf0f1;">

    <VBox alignment="CENTER" spacing="30" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" 
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- Header text -->
        <Label text="Generate Report" 
               style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"
               textAlignment="CENTER"/>

        <!-- Instruction / description -->
        <Label text="Click the button below to generate the Library Summary Report as PDF." 
               wrapText="true" maxWidth="400" textAlignment="CENTER"
               style="-fx-font-size: 14px; -fx-text-fill: #34495e;"/>

        <!-- Generate Report Button -->
        <Button fx:id="generateBtn" text="Generate Report" onAction="#handleGenerateReport"
                prefWidth="220" prefHeight="50"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand;">
        </Button>
        
    </VBox>

</AnchorPane>
