<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane style="-fx-background-color: #f5f7fa;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BorrowBookController">
   <children>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <content>
            <VBox spacing="20.0" style="-fx-background-color: #f5f7fa;">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="12.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0, 27, 82, 0.08), 10, 0, 0, 2);">
               <children>
                  <VBox alignment="CENTER" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: #001b52; -fx-background-radius: 12;">
                     <children>
                        <FontAwesomeIcon fill="white" glyphName="BARCODE" size="1.8em" />
                     </children>
                  </VBox>
                  <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #001b52;" text="Borrow Book">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            
            <!-- Barcode Scanner Section -->
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0, 27, 82, 0.08), 10, 0, 0, 2);">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <FontAwesomeIcon fill="#001b52" glyphName="QRCODE" size="1.5em" />
                        <Label style="-fx-text-fill: #001b52; -fx-font-weight: bold;" text="Scan Barcode">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  
                  <HBox alignment="CENTER_LEFT" spacing="15.0">
                     <children>
                        <TextField fx:id="barcodeField" prefHeight="50.0" prefWidth="540.0" promptText="Scan or enter book barcode..." style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #001b52; -fx-border-radius: 10; -fx-border-width: 2; -fx-padding: 12; -fx-font-size: 16px; -fx-font-weight: bold;">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </TextField>
                        <Button fx:id="scanBtn" prefHeight="50.0" prefWidth="130.0" style="-fx-background-color: #001b52; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0, 27, 82, 0.3), 8, 0, 0, 2);" text="Scan">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                           <graphic>
                              <FontAwesomeIcon fill="white" glyphName="SEARCH" size="1.2em" />
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Book Details Section -->
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0, 27, 82, 0.08), 10, 0, 0, 2);" VBox.vgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <FontAwesomeIcon fill="#001b52" glyphName="BOOK" size="1.5em" />
                        <Label style="-fx-text-fill: #001b52; -fx-font-weight: bold;" text="Book Details">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  
                  <GridPane hgap="20.0" vgap="18.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        
                        <!-- Title -->
                        <Label style="-fx-text-fill: #001b52;" text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="titleField" editable="false" prefHeight="45.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-border-color: #e1e4e8; -fx-border-radius: 10; -fx-border-width: 1; -fx-padding: 12; -fx-font-size: 14px; -fx-opacity: 0.9;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        
                        <!-- Author -->
                        <Label style="-fx-text-fill: #001b52;" text="Author:" GridPane.columnIndex="2" GridPane.rowIndex="0">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="authorField" editable="false" prefHeight="45.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-border-color: #e1e4e8; -fx-border-radius: 10; -fx-border-width: 1; -fx-padding: 12; -fx-font-size: 14px; -fx-opacity: 0.9;" GridPane.columnIndex="3" GridPane.rowIndex="0">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        
                        <!-- Genre -->
                        <Label style="-fx-text-fill: #001b52;" text="Genre:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <ListView fx:id="genreListView" prefHeight="45.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-border-color: #e1e4e8; -fx-border-radius: 10; -fx-border-width: 1;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <!-- Publisher -->
                        <Label style="-fx-text-fill: #001b52;" text="Publisher:" GridPane.columnIndex="2" GridPane.rowIndex="1">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="publisherField" editable="false" prefHeight="45.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-border-color: #e1e4e8; -fx-border-radius: 10; -fx-border-width: 1; -fx-padding: 12; -fx-font-size: 14px; -fx-opacity: 0.9;" GridPane.columnIndex="3" GridPane.rowIndex="1">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        
                        <!-- ISBN -->
                        <Label style="-fx-text-fill: #001b52;" text="ISBN:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="isbnField" editable="false" prefHeight="45.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-border-color: #e1e4e8; -fx-border-radius: 10; -fx-border-width: 1; -fx-padding: 12; -fx-font-size: 14px; -fx-opacity: 0.9;" GridPane.columnIndex="1" GridPane.rowIndex="2">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        
                        <!-- Available Copies -->
                        <Label style="-fx-text-fill: #001b52;" text="Available:" GridPane.columnIndex="2" GridPane.rowIndex="2">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="availableField" editable="false" prefHeight="45.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-border-color: #e1e4e8; -fx-border-radius: 10; -fx-border-width: 1; -fx-padding: 12; -fx-font-size: 14px; -fx-opacity: 0.9;" GridPane.columnIndex="3" GridPane.rowIndex="2">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </GridPane>
               </children>
            </VBox>
            
            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <HBox HBox.hgrow="ALWAYS" />
                  <Button fx:id="cancelBtn" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #f1f3f5; -fx-text-fill: #495057; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(73, 80, 87, 0.2), 6, 0, 0, 2);" text="Cancel">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                     <graphic>
                        <FontAwesomeIcon fill="#495057" glyphName="TIMES" size="1.2em" />
                     </graphic>
                  </Button>
                  <Button fx:id="confirmBtn" onAction="#handleSave" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(76, 175, 80, 0.3), 8, 0, 0, 2);" text="Confirm">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                     <graphic>
                        <FontAwesomeIcon fill="white" glyphName="CHECK" size="1.2em" />
                     </graphic>
                  </Button>
               </children>
            </HBox>
            </children>
         </VBox>
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
