                              <VBox alignment="CENTER" prefWidth="40.0" prefHeight="40.0" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 10;">
                                 <children>
                                    <FontAwesomeIcon fill="white" glyphName="USERS" size="1.5em" />
                                 </children>
                              </VBox>
                              <Label style="-fx-text-fill: white; -fx-font-weight: 600; -fx-font-size: 14px;" text="Total Students"/>
                           </HBox>
                           <Label fx:id="totalStudentsLabel" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 28px;" text="0"/>
                        </VBox>

                        <!-- Total Books Card -->
                        <VBox spacing="10.0" alignment="CENTER_LEFT" prefWidth="180.0" prefHeight="120.0" style="-fx-background-color: linear-gradient(to bottom right, #2196F3, #1976D2); -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 4); -fx-padding: 20;">
                           <HBox spacing="12.0" alignment="CENTER_LEFT">
                              <VBox alignment="CENTER" prefWidth="40.0" prefHeight="40.0" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 10;">
                                 <children>
                                    <FontAwesomeIcon fill="white" glyphName="BOOK" size="1.5em" />
                                 </children>
                              </VBox>
                              <Label style="-fx-text-fill: white; -fx-font-weight: 600; -fx-font-size: 14px;" text="Total Books"/>
                           </HBox>
                           <Label fx:id="totalBooksLabel" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 28px;" text="0"/>
                        </VBox>

                        <!-- Borrowed Books Card -->
                        <VBox spacing="10.0" alignment="CENTER_LEFT" prefWidth="180.0" prefHeight="120.0" style="-fx-background-color: linear-gradient(to bottom right, #FF9800, #F57C00); -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 4); -fx-padding: 20;">
                           <HBox spacing="12.0" alignment="CENTER_LEFT">
                              <VBox alignment="CENTER" prefWidth="40.0" prefHeight="40.0" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 10;">
                                 <children>
                                    <FontAwesomeIcon fill="white" glyphName="EXCHANGE" size="1.5em" />
                                 </children>
                              </VBox>
                              <Label style="-fx-text-fill: white; -fx-font-weight: 600; -fx-font-size: 14px;" text="Borrowed Books"/>
                           </HBox>
                           <Label fx:id="totalBorrowedLabel" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 28px;" text="0"/>
                        </VBox>

                        <!-- Genres Card -->
                        <VBox spacing="10.0" alignment="CENTER_LEFT" prefWidth="180.0" prefHeight="120.0" style="-fx-background-color: linear-gradient(to bottom right, #9C27B0, #8E24AA); -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 4); -fx-padding: 20;">
                           <HBox spacing="12.0" alignment="CENTER_LEFT">
                              <VBox alignment="CENTER" prefWidth="40.0" prefHeight="40.0" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 10;">
                                 <children>
                                    <FontAwesomeIcon fill="white" glyphName="TAGS" size="1.5em" />
                                 </children>
                              </VBox>
                              <Label style="-fx-text-fill: white; -fx-font-weight: 600; -fx-font-size: 14px;" text="Genres"/>
                           </HBox>
                           <Label fx:id="totalGenresLabel" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 28px;" text="0"/>
                        </VBox>

                        <!-- Available Books Card -->
                        <VBox spacing="10.0" alignment="CENTER_LEFT" prefWidth="180.0" prefHeight="120.0" style="-fx-background-color: linear-gradient(to bottom right, #00BCD4, #0097A7); -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 4); -fx-padding: 20;">
                           <HBox spacing="12.0" alignment="CENTER_LEFT">
                              <VBox alignment="CENTER" prefWidth="40.0" prefHeight="40.0" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 10;">
                                 <children>
                                    <FontAwesomeIcon fill="white" glyphName="CHECK_CIRCLE" size="1.5em" />
                                 </children>
                              </VBox>
                              <Label style="-fx-text-fill: white; -fx-font-weight: 600; -fx-font-size: 14px;" text="Available Books"/>
                           </HBox>
                           <Label fx:id="availableBooksLabel" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 28px;" text="0"/>
                        </VBox>

                        <!-- Today's Attendance Card -->
                        <VBox spacing="10.0" alignment="CENTER_LEFT" prefWidth="180.0" prefHeight="120.0" style="-fx-background-color: linear-gradient(to bottom right, #607D8B, #546E7A); -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 4); -fx-padding: 20;">
                           <HBox spacing="12.0" alignment="CENTER_LEFT">
                              <VBox alignment="CENTER" prefWidth="40.0" prefHeight="40.0" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 10;">
                                 <children>
                                    <FontAwesomeIcon fill="white" glyphName="CALENDAR" size="1.5em" />
                                 </children>
                              </VBox>
                              <Label style="-fx-text-fill: white; -fx-font-weight: 600; -fx-font-size: 14px;" text="Today's Attendance"/>
                           </HBox>
                           <Label fx:id="todayAttendanceLabel" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 28px;" text="0"/>
                        </VBox>

                        <!-- Overdue Books Card -->
                        <VBox spacing="10.0" alignment="CENTER_LEFT" prefWidth="180.0" prefHeight="120.0" style="-fx-background-color: linear-gradient(to bottom right, #F44336, #D32F2F); -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 4); -fx-padding: 20;">
                           <HBox spacing="12.0" alignment="CENTER_LEFT">
                              <VBox alignment="CENTER" prefWidth="40.0" prefHeight="40.0" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 10;">
                                 <children>
                                    <FontAwesomeIcon fill="white" glyphName="EXCLAMATION_TRIANGLE" size="1.5em" />
                                 </children>
                              </VBox>
                              <Label style="-fx-text-fill: white; -fx-font-weight: 600; -fx-font-size: 14px;" text="Overdue Books"/>
                           </HBox>
                           <Label fx:id="overdueBooksLabel" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 28px;" text="0"/>
                        </VBox>
                     </children>
                  </FlowPane>

                  <!-- Charts Section -->
                  <VBox spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0, 27, 82, 0.08), 12, 0, 0, 3);" VBox.vgrow="ALWAYS">
                     <children>
                        <!-- Charts Header -->
                        <HBox alignment="CENTER_LEFT" spacing="12.0">
                           <children>
                              <VBox alignment="CENTER" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #001b52; -fx-background-radius: 10;">
                                 <children>
                                    <FontAwesomeIcon fill="white" glyphName="BOOK" size="1.5em" />
                                 </children>
                              </VBox>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: #001b52;" text="Analytics &amp; Insights">
                                 <font>
                                    <Font name="System Bold" size="20.0" />
                                 </font>
                              </Text>
                           </children>
                        </HBox>

                        <!-- Charts Grid -->
                        <GridPane hgap="20.0" vgap="20.0" VBox.vgrow="ALWAYS">
                           <children>
                              <!-- Book Status Pie Chart -->
                              <VBox spacing="10.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-padding: 15;" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                 <children>
                                    <Label style="-fx-text-fill: #001b52; -fx-font-weight: bold; -fx-font-size: 14px;" text="Book Availability Status">
                                       <graphic>
                                          <FontAwesomeIcon fill="#001b52" glyphName="BOOK" size="1.2em" />
                                       </graphic>
                                    </Label>
                                    <PieChart fx:id="bookStatusChart" VBox.vgrow="ALWAYS" />
                                 </children>
                              </VBox>

                              <!-- Genre Distribution Bar Chart -->
                              <VBox spacing="10.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-padding: 15;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                 <children>
                                    <Label style="-fx-text-fill: #001b52; -fx-font-weight: bold; -fx-font-size: 14px;" text="Books by Genre">
                                       <graphic>
                                          <FontAwesomeIcon fill="#001b52" glyphName="TAGS" size="1.2em" />
                                       </graphic>
                                    </Label>
                              <BarChart fx:id="genreChart" VBox.vgrow="ALWAYS">
                                 <xAxis>
                                    <CategoryAxis side="BOTTOM" />
                                 </xAxis>
                                 <yAxis>
                                    <NumberAxis side="LEFT" />
                                 </yAxis>
                              </BarChart>
                                 </children>
                              </VBox>

                              <!-- Borrowing Trends Line Chart -->
                              <VBox spacing="10.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-padding: 15;" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                 <children>
                                    <Label style="-fx-text-fill: #001b52; -fx-font-weight: bold; -fx-font-size: 14px;" text="Monthly Borrowing Trends">
                                       <graphic>
                                          <FontAwesomeIcon fill="#001b52" glyphName="CALENDAR" size="1.2em" />
                                       </graphic>
                                    </Label>
                              <LineChart fx:id="borrowingTrendChart" VBox.vgrow="ALWAYS">
                                 <xAxis>
                                    <CategoryAxis side="BOTTOM" />
                                 </xAxis>
                                 <yAxis>
                                    <NumberAxis side="LEFT" />
                                 </yAxis>
                              </LineChart>
                                 </children>
                              </VBox>

                              <!-- Student Activity Bar Chart -->
                              <VBox spacing="10.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-padding: 15;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                 <children>
                                    <Label style="-fx-text-fill: #001b52; -fx-font-weight: bold; -fx-font-size: 14px;" text="Student Activity Overview">
                                       <graphic>
                                          <FontAwesomeIcon fill="#001b52" glyphName="USERS" size="1.2em" />
                                       </graphic>
                                    </Label>
                              <BarChart fx:id="studentActivityChart" VBox.vgrow="ALWAYS">
                                 <xAxis>
                                    <CategoryAxis side="BOTTOM" />
                                 </xAxis>
                                 <yAxis>
                                    <NumberAxis side="LEFT" />
                                 </yAxis>
                              </BarChart>
                                 </children>
                              </VBox>
                           </children>
                        </GridPane>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
