         <children>
            <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#handleCancel" prefHeight="45.0" prefWidth="120.0" style="-fx-background-color: #6c757d; -fx-background-radius: 8; -fx-text-fill: white; -fx-font-weight: 500; -fx-font-size: 13px;">
               <graphic>
                  <HBox alignment="CENTER" spacing="6.0">
                     <children>
                        <FontAwesomeIcon fill="white" glyphName="TIMES" size="1.0em" />
                        <Label style="-fx-text-fill: white; -fx-font-weight: 500;" text="Close" />
