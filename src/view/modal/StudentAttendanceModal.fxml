                        <VBox alignment="CENTER" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: #2196F3; -fx-background-radius: 12;">
                           <children>
                              <FontAwesomeIcon fill="white" glyphName="QRCODE" size="1.8em" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER_LEFT" spacing="5.0">
                           <children>
                              <Label style="-fx-text-fill: #001b52; -fx-font-weight: bold; -fx-font-size: 20px;" text="Scan Student Barcode" /><!-- Updated -->
