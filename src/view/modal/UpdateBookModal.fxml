<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="520.0" prefWidth="721.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 35;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UpdateBookModalController">
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="12.0">
        <VBox.margin>
            <Insets bottom="25.0" />
        </VBox.margin>
        <children>
            <VBox alignment="CENTER" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: #001b52; -fx-background-radius: 12;">
                <children>
                    <FontAwesomeIcon fill="white" glyphName="EDIT" size="1.8em" />
                </children>
            </VBox>
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #001b52;" text="Update Book">
                <font>
                    <Font name="System Bold" size="28.0" />
                </font>
            </Label>
        </children>
    </HBox>
    
    <!-- Form Fields -->
    <GridPane hgap="20.0" vgap="22.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="140.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="250.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="140.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="250.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            
            <!-- Row 1: Title & Author -->
            <Label style="-fx-text-fill: #001b52; -fx-font-weight: bold;" text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <TextField fx:id="titleField" prefHeight="42.0" promptText="Enter book title" style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #d1d9dd; -fx-border-radius: 8; -fx-border-width: 1.5; -fx-padding: 10; -fx-font-size: 13;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <font>
                    <Font size="13.0" />
                </font>
            </TextField>
            
            <Label style="-fx-text-fill: #001b52; -fx-font-weight: bold;" text="Author:" GridPane.columnIndex="2" GridPane.rowIndex="0">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <TextField fx:id="authorField" prefHeight="42.0" promptText="Enter author name" style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #d1d9dd; -fx-border-radius: 8; -fx-border-width: 1.5; -fx-padding: 10; -fx-font-size: 13;" GridPane.columnIndex="3" GridPane.rowIndex="0">
                <font>
                    <Font size="13.0" />
                </font>
            </TextField>
            
            <!-- Row 2: Category & Publisher -->
            <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label style="-fx-text-fill: #001b52; -fx-font-weight: bold;" text="Category:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Label style="-fx-text-fill: #6c757d; -fx-font-size: 11px;" text="(Hold CTRL for multiple)" wrapText="true">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Label>
            </VBox>
            <ListView fx:id="categoryListView" prefHeight="85.0" prefWidth="250.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #d1d9dd; -fx-border-radius: 8; -fx-border-width: 1.5;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <Label style="-fx-text-fill: #001b52; -fx-font-weight: bold;" text="Publisher:" GridPane.columnIndex="2" GridPane.rowIndex="1">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <TextField fx:id="publisherField" prefHeight="42.0" promptText="Enter publisher name" style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #d1d9dd; -fx-border-radius: 8; -fx-border-width: 1.5; -fx-padding: 10; -fx-font-size: 13;" GridPane.columnIndex="3" GridPane.rowIndex="1">
                <font>
                    <Font size="13.0" />
                </font>
            </TextField>
            
            <!-- Row 3: Publication Date -->
            <Label style="-fx-text-fill: #001b52; -fx-font-weight: bold;" text="Publication Date:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <DatePicker fx:id="publicationDatePicker" prefHeight="42.0" prefWidth="250.0" promptText="Select date" style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #d1d9dd; -fx-border-radius: 8; -fx-border-width: 1.5;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        </children>
    </GridPane>
    
    <!-- Action Buttons -->
    <HBox alignment="CENTER" spacing="15.0" style="-fx-padding: 30 0 0 0;">
        <children>
            <Button onAction="#handleCancel" prefHeight="48.0" prefWidth="160.0" style="-fx-background-color: #e9ecef; -fx-text-fill: #495057; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand; -fx-font-size: 14;" text="Cancel">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
                <graphic>
                    <FontAwesomeIcon fill="#495057" glyphName="TIMES" size="1.2em" />
                </graphic>
            </Button>
            <Button onAction="#handleUpdate" prefHeight="48.0" prefWidth="160.0" style="-fx-background-color: #001b52; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0, 27, 82, 0.3), 12, 0, 0, 4); -fx-font-size: 14;" text="Update Book">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
                <graphic>
                    <FontAwesomeIcon fill="white" glyphName="CHECK" size="1.2em" />
                </graphic>
            </Button>
        </children>
    </HBox>
    
</VBox>