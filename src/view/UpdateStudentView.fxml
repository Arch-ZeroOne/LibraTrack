<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="578.0" prefWidth="815.0" style="-fx-background-color: #f5f7fa;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UpdateStudentViewController">
   <children>
      <VBox layoutX="30.0" layoutY="20.0" prefHeight="538.0" prefWidth="755.0" spacing="30.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,27,82,0.08), 15,0,0,2);">
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
         <children>
            <!-- Header -->
            <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #001b52;" text="Update Student" />

            <!-- Form Grid -->
            <GridPane hgap="25.0" vgap="25.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="150.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="280.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="150.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="280.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" /> <!-- School ID -->
                  <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" /> <!-- QR Code -->
                  <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" /> <!-- First + Last -->
                  <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" /> <!-- Middle + Last -->
                  <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" /> <!-- Course + Is Active -->
               </rowConstraints>

               <!-- School ID -->
               <Label style="-fx-text-fill: #001b52;" text="School ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
               <TextField fx:id="schoolIdField" prefHeight="45.0" promptText="Enter school ID" style="-fx-background-color: #f1f3f5; -fx-background-radius: 12; -fx-border-color: #dfe3e8; -fx-border-radius: 12; -fx-border-width: 1; -fx-padding: 14; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

               <!-- QR Code -->
               <Label style="-fx-text-fill: #001b52;" text="QR Code:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
               <TextField fx:id="qrCodeField" prefHeight="45.0" promptText="Please Scan QR Code" style="-fx-background-color: #f1f3f5; -fx-background-radius: 12; -fx-border-color: #dfe3e8; -fx-border-radius: 12; -fx-border-width: 1; -fx-padding: 14; -fx-font-size: 14px;" GridPane.columnIndex="3" GridPane.rowIndex="0" />

               <!-- First Name -->
               <Label style="-fx-text-fill: #001b52;" text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
               <TextField fx:id="firstnameField" prefHeight="45.0" promptText="Enter first name" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-border-color: #e1e4e8; -fx-border-radius: 10; -fx-border-width: 1; -fx-padding: 12; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

               <!-- Middle Name -->
               <Label style="-fx-text-fill: #001b52;" text="Middle Name:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
               <TextField fx:id="middlenameField" prefHeight="45.0" promptText="Enter middle name (optional)" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-border-color: #e1e4e8; -fx-border-radius: 10; -fx-border-width: 1; -fx-padding: 12; -fx-font-size: 14px;" GridPane.columnIndex="3" GridPane.rowIndex="1" />

               <!-- Last Name -->
               <Label style="-fx-text-fill: #001b52;" text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
               <TextField fx:id="lastnameField" prefHeight="45.0" promptText="Enter last name" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-border-color: #e1e4e8; -fx-border-radius: 10; -fx-border-width: 1; -fx-padding: 12; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

               <!-- Course -->
               <Label style="-fx-text-fill: #001b52;" text="Course:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
               <ComboBox fx:id="courseComboBox" prefHeight="45.0" promptText="Select course" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-border-color: #e1e4e8; -fx-border-radius: 10; -fx-border-width: 1; -fx-padding: 12; -fx-font-size: 14px;" GridPane.columnIndex="3" GridPane.rowIndex="2" />

               <!-- Is Active -->
               <Label style="-fx-text-fill: #001b52;" text="Is Active:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
               <ComboBox fx:id="isActiveComboBox" prefHeight="45.0" promptText="Select status" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-border-color: #e1e4e8; -fx-border-radius: 10; -fx-border-width: 1; -fx-padding: 12; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </GridPane>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <HBox HBox.hgrow="ALWAYS" />
                  <Button onAction="#handleDelete" prefHeight="45.0" prefWidth="130.0" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(220,53,69,0.2),8,0,0,2);" text="Delete" />
                  <Button onAction="#handleUpdate" prefHeight="45.0" prefWidth="130.0" style="-fx-background-color: #001b52; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,27,82,0.2),8,0,0,2);" text="Update" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
